{% extends "layout.html.twig" %} {% block title %}Bières{% endblock %} {% block content %}
<h2 class="text-center">{{ block('title') }}</h2> {% if bieres %}
<div class="table-responsive">
    <table class="table table-hover table-condensed">
        <thead>
            <tr>
                <th>Nom bière</th>
            </tr>
        </thead>
        {% for biere in bieres %}
        <tr>
            <td><a href="/biere/{{ biere.codeBiere }}">{{ biere.libelle }}</a></td>
        </tr>
        {% endfor %}
    </table>
</div>
{% else %}
<div class="alert alert-warning">Aucune bière trouvé.</div>
{% endif %} {% endblock %}